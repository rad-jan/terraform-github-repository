root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2

[*.hcl]
indent_size = 2

[*.go]
indent_size = 8
indent_style = tab

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = true

[*.yaml]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2
